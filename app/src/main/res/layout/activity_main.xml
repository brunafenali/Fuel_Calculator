<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background_verde_petroleo"
    tools:context=".MainActivity">


    <FrameLayout
        android:background="@drawable/bg_frame_curved"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_fuel_calculator"
            android:contentDescription="Imagem de uma bomba de gasolina com calculadora" />
    </FrameLayout>


    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora de gastos de combustível"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/accent_orange_soft"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:gravity="center"/>


    <TextView
        android:id="@+id/txtDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precisa calcular seu gasto com combustível? Descubra em instantes e planeje sua viagem com mais tranquilidade."
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"/>



    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/accent_orange_soft"
        android:layout_marginTop="200dp" />

</LinearLayout>
